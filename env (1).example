# HIPAA-Compliant OIDC Authentication Configuration
# Copy to .env and fill in your values

# OIDC Identity Provider Settings
OIDC_ISSUER=https://YOUR_TENANT/           # ends with /
OIDC_CLIENT_ID=YOUR_CLIENT_ID
OIDC_CLIENT_SECRET=YOUR_CLIENT_SECRET      # if confidential client
OIDC_REDIRECT_URI=https://your.app/auth/callback
OIDC_POST_LOGOUT_REDIRECT_URI=https://your.app/
OIDC_API_AUDIENCE=api://your-api           # or your IdP API identifier

# Session Security
SESSION_SECRET=replace-with-strong-random-32char-string
NODE_ENV=production

# Database
DATABASE_URL=postgresql://username:password@host:port/database

# Optional: OpenAI for enhanced analysis
OPENAI_API_KEY=your_openai_api_key_here

# Static Assets (for music library)
STATIC_ASSETS_PATH=/path/to/music/library